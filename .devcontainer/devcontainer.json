{
  "name": "Backstage Dev",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.9"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Spotify.backstage"
      ]
    }
  },
  "postCreateCommand": "npm install -g @backstage/cli && pip install mkdocs-techdocs-core"
}
